---
import Down from "./svg/Down.astro";
interface Props {
  fullName: string,
  iam: Array<string>,
  shortDescription: string,
  cvUrl: string
}
const { fullName, iam, shortDescription, cvUrl } = Astro.props;
---

<section class="hero-section h-screen w-screen min-h-[525px] relative">
  <div class="container px-2 md:px-0 mx-auto">
    <div class="max-w-4xl mx-auto h-screen">
      <div class="z-10 relative h-full flex flex-col justify-center">
        <span class="mb-2 text-md text-slate-200" data-scroll
          >Hi, my name is</span
        >
        <h1
          class="text-slate-200 text-5xl md:text-[64px] font-bold leading-none"
          data-scroll
        >
          {fullName}
        </h1>

        <div class="Iam text-slate-400">
          <b>
            <ul
              class="innerIam font-black text-transparent bg-clip-text bg-gradient-to-r from-cyan-600 to-cyan-400"
            >
            {iam.map((item) => (
              <li>{item}</li>
            ))}
            </ul>
          </b>
        </div>
        <p class="mt-6 text-lg max-w-2xl">
          {shortDescription}
        </p>
        { cvUrl && <footer class="mt-8">
          <a
            href={cvUrl}
            download
            title="CV"
            class="btn-animation inline-block py-3 px-6 text-slate-200 border-2 border-cyan-400 rounded-lg font-semibold shadow-2xl shadow-cyan-400/50 hover:transition-colors hover:duration-500 hover:bg-gradient-to-r hover:bg-slate-900"
            >Download CV</a>
        </footer>}
      </div>
    </div>
  </div>
  <div
    class="absolute z-10 right-0 h-full w-1/5 -bottom-28 bg-[radial-gradient(ellipse_at_right,_var(--tw-gradient-stops))] from-slate-400 via-slate-950 to-slate-950 opacity-10"
  >
  </div>
  <ul
    class="after:bg-slate-600 after:content-[''] after:block after:h-[1px] after:w-20 flex items-center absolute gap-5 z-20 bottom-12 right-0 [&>li>a:hover]:text-slate-300 [&>li>a:hover]:transition-all [&>li>a:hover]:duration-500 [&>li>a:hover]:ease-in-out"
  >
    <li><a href="#experience" class="animate-pulse"><Down /></a></li>
  </ul>
</section>

<style>
  .Iam {
    font:
      900 38px/50px Inter,
      sans-serif;
  }
  .Iam p {
    height: 50px;
    float: left;
    margin-right: 0.3em;
  }
  .Iam b {
    float: left;
    overflow: hidden;
    position: relative;
    height: 50px;
  }
  .Iam .innerIam {
    display: inline-block;
    position: relative;
    white-space: nowrap;
    top: 0;
    left: 0;
    margin: 0px;

    /*animation*/
    -webkit-animation: move 9s;
    -moz-animation: move 9s;
    -ms-animation: move 9s;
    -o-animation: move 9s;
    animation: move 9s;
    /*animation-iteration-count*/
    -webkit-animation-iteration-count: 1;
    -moz-animation-iteration-count: 1;
    -ms-animation-iteration-count: 1;
    -o-animation-iteration-count: 1;
    animation-iteration-count: 1;
    /*animation-delay*/
    -webkit-animation-delay: 3s;
    -moz-animation-delay: 3s;
    -ms-animation-delay: 3s;
    -o-animation-delay: 3s;
    animation-delay: 3s;
  }
  @keyframes move {
    0% {
      top: 0px;
    }
    20% {
      top: -50px;
    }
    40% {
      top: -100px;
    }
    60% {
      top: -150px;
    }
    80% {
      top: -200px;
    }
  }

  @-webkit-keyframes move {
    0% {
      top: 0px;
    }
    20% {
      top: -50px;
    }
    40% {
      top: -100px;
    }
    60% {
      top: -150px;
    }
    80% {
      top: -200px;
    }
  }
  @-moz-keyframes move {
    0% {
      top: 0px;
    }
    20% {
      top: -50px;
    }
    40% {
      top: -100px;
    }
    60% {
      top: -150px;
    }
    80% {
      top: -200px;
    }
  }
  @-o-keyframes move {
    0% {
      top: 0px;
    }
    20% {
      top: -50px;
    }
    40% {
      top: -100px;
    }
    60% {
      top: -150px;
    }
    80% {
      top: -200px;
    }
  }
  @keyframes move {
    0% {
      top: 0px;
    }
    20% {
      top: -50px;
    }
    40% {
      top: -100px;
    }
    60% {
      top: -150px;
    }
    80% {
      top: -200px;
    }
  }
</style>
